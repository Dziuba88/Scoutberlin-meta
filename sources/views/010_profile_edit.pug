      .profile__edit
        .row
          .col.md-6
            .profile__edit--avatar
              input#avatar(type="file", name="avatar")
              span.avatar__image: img(src="img/no-avatar.png", alt="")
              label.avatar__label(for="avatar") Сменить фото профиля
            .profile__edit--main
              .input__group
                label Имя пользователя
                input(type="text" value="Константин константинопольский")
              .input__group
                label Телефон
                input(type="tel" value="")
              .input__group
                label Регион
                .selectbox
                  select
                    option
                    option Berlin and Brandenburg
                    option Saxony
                    option ТThuringia
                    option Franconia
                    option(selected="") Baden-Württemberg
              .input__group
                label Адрес
                input(type="text" value="")
            .profile__edit--map: #profile_map
          .col.md-6
            .profile__edit--description
              .input__group
                label Описание
                textarea(cols="30", rows="10")
      .profile__photos
        h3 Фотографии
        .profile__photos--list
          - for(i=1;i<=3;i++)
            .photo-thumb
              img(src="img/thumbnail.png", alt="")
              a.delete
                svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x")
