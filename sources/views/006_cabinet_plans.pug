extends models/layout
block content
  .cabinet
    .container
      include models/breadcrumbs
      .cabinet__header Пакеты для справочника
      .row
        .col.sm-6.md-3
          .cabinet__price
            .cabinet__price--body
              .cabinet__price--title Пакет «Старт»
              .cabinet__price--value 99 €
            .cabinet__price--img(data-mfp-type="image", data-mfp-src="img/plan-1.png"): img(src="img/plan-1.png", alt="")
            .cabinet__price--control
              .selectbox
                select
                  option(label="not selected")
                  option(selected="") 1 месяц
                  option 6 месяцев
                  option 1 год
              button(data-mfp-src="#buyModal-1" data-mfp-type="inline").btn.block.white: span Купить
          .cabinet__price--info: ul
            li <strong>200</strong> символов в описании
            li Показывать телефон
        .col.sm-6.md-3
          .cabinet__price
            .cabinet__price--body
              .cabinet__price--title Пакет «Эконом»
              .cabinet__price--value 299 €
            .cabinet__price--img(data-mfp-type="image", data-mfp-src="img/plan-2.png"): img(src="img/plan-2.png", alt="")
            .cabinet__price--control: span.current Мой пакет
          .cabinet__price--info: ul
            li <strong>600</strong> символов в описании
            li Показывать до 3-х телефонов
            li Логотип компании
            li Обмен сообщениями
            li Статистика
        .col.sm-6.md-3
          .cabinet__price
            .cabinet__price--body
              .cabinet__price--title Пакет «Бизнес»
              .cabinet__price--value 399 €
            .cabinet__price--img(data-mfp-type="image", data-mfp-src="img/plan-3.png"): img(src="img/plan-3.png", alt="")
            .cabinet__price--control
              .selectbox
                select
                  option(label="not selected")
                  option(selected="") 1 месяц
                  option 6 месяцев
                  option 1 год
              button(data-mfp-src="#buyModal-2" data-mfp-type="inline").btn.block.white: span Купить
          .cabinet__price--info: ul
            li <strong>1200</strong> символов в описании
            li Расширенные контакты компании
            li Логотип с ссылкой на сайт компании
            li Обмен сообщениями
            li Статистика
            li Управление комментариями
            li Раздел услуг
            li Баннер на странице справочника
        .col.sm-6.md-3
          .cabinet__price
            .cabinet__price--body
              .cabinet__price--title Пакет «Премиум»
              .cabinet__price--value 599 €
            .cabinet__price--img(data-mfp-type="image", data-mfp-src="img/plan-4.png"): img(src="img/plan-4.png", alt="")
            .cabinet__price--control
              .selectbox
                select
                  option(label="not selected")
                  option(selected="") 1 месяц
                  option 6 месяцев
                  option 1 год
              button(data-mfp-src="#buyModal-3" data-mfp-type="inline").btn.block.white: span Купить
          .cabinet__price--info: ul
            li <strong>2500</strong> символов в описании
            li Расширенные контакты компании
            li Логотип с ссылкой на сайт компании
            li Обмен сообщениями
            li Статистика
            li Управление комментариями
            li Раздел услуг
            li Баннер на странице справочника
            li Баннер на главной
  #buyModal-1.mfp-hide.popup__default
    h3.popup__default--header Выберите компанию для публикации
    .select__company
      .radio
        input#buy-1_1(type="radio", name="buy-1")
        label(for="buy-1_1")
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): polyline(points="20 6 9 17 4 12")
          span Giggle Inc.
      .radio
        input#buy-1_2(type="radio", name="buy-1")
        label(for="buy-1_2")
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): polyline(points="20 6 9 17 4 12")
          span Some company
      .radio
        input#buy-1_3(type="radio", name="buy-1")
        label(for="buy-1_3")
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): polyline(points="20 6 9 17 4 12")
          span Some company
      .radio
        input#buy-1_4(type="radio", name="buy-1")
        label(for="buy-1_4")
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): polyline(points="20 6 9 17 4 12")
          span Some company
    button.btn.blue
      svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M20.7 5.3a1 1 0 0 0-1.4 0L9 15.6l-4.3-4.3c-.4-.4-1-.4-1.4 0s-.4 1 0 1.4l5 5c.2.2.4.3.7.3s.5-.1.7-.3l11-11c.4-.4.4-1 0-1.4z")
      span Купить
    button.btn.cancel(data-mfp-close)
      svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x")
        line(x1="18" y1="6" x2="6" y2="18")
        line(x1="6" y1="6" x2="18" y2="18")
      span Отмена
