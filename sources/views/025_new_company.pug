                      option
                      option(selected) Berlin and Brandenburg
                      option Saxony
                      option ТThuringia
                      option Franconia
                  .col.sm-6: .input__group
                    label Адрес
                    input(type="text")
                  .col.xs-12: .adress__info--map: #company_map
              .col.md-4
                .company__links: .row
                  .col.md-12.sm-6: .input__group
                    label Ссылка на сайт
                    input(type="url")
                  .col.md-12.sm-6: .input__group
                    label Ссылка на Facebook
                    input(type="url")
                  .col.md-12.sm-6: .input__group
                    label Ссылка на Instagram
                    input(type="url")
                  .col.md-12.sm-6: .input__group
                    label Ссылка на Twitter
                    input(type="url")
            .company__lang: .input__group
              label Языки общения
              .multiselect: select(multiple)
                option(selected value="Русский") Русский
                option(value="Румынский") Румынский
                option(value="Английский") Английский
                option(value="Немецкий") Немецкий
