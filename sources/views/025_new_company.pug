extends models/layout
block content
  section.create
    .container
      include models/breadcrumbs
      .create__header Новая компания
      .create__company
        .row
          .col.lg-9
            .input__group
                label Название компании
                input.big(type="text")
            .input__group
              label Описание
              textarea(cols="30", rows="10")
          .col.lg-3
            .row
              .col.lg-12.sm-6
                .create__company--logo
                  input#avatar(type="file", name="avatar")
                  span.avatar__image: img(src="img/no-avatar.png", alt="")
                  label.avatar__label(for="avatar") Загрузить логотип
              .col.lg-12.sm-6: .input__group
                label Категория
                .selectbox: select
                  option
                  option(selected) Авто
                  option Одежда
                  option Товары для дома
                  option Недвижимость
                  option Знакомства
              .col.lg-12
                .create__company--services
                  h3 Услуги
                  ul
                    li.input__group
                      input(type="text" readonly value="Услуга").small
                      span.delete: svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x")
                        line(x1="18" y1="6" x2="6" y2="18")
                        line(x1="6" y1="6" x2="18" y2="18")
                    li.input__group
                      input(type="text" readonly value="Услуга").small
                      span.delete: svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x")
                        line(x1="18" y1="6" x2="6" y2="18")
                        line(x1="6" y1="6" x2="18" y2="18")
                    li.input__group
                      input(type="text" readonly value="Услуга").small
                      span.delete: svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x")
                        line(x1="18" y1="6" x2="6" y2="18")
                        line(x1="6" y1="6" x2="18" y2="18")
                  .services__add: button.btn.link
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M19 11h-6V5c0-.6-.4-1-1-1s-1 .4-1 1v6H5c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1v-6h6c.6 0 1-.4 1-1s-.4-1-1-1z")
                    span Добавить услугу
      .create__media
        h3 Фотографии и видео
        .create__media--photos
