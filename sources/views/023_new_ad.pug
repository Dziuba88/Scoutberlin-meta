extends models/layout
block content
  section.create
    .container
      include models/breadcrumbs
      .create__header Новое объявление
      .create__advert
        .row
          .col.lg-9
            .row
              .col.md-8: .input__group
                label Заголовок
                input.big(type="text")
              .col.md-4: .input__group
                label Цена
                input(type="text")
            .input__group
              label Описание
              textarea(cols="30", rows="10")
          .col.lg-3
            .row
              .col.lg-12.md-3.sm-6: .input__group
                label Тип предложения
                .selectbox: select
                  option
                  option(selected) Куплю
                  option Продам
              .col.lg-12.md-3.sm-6: .input__group
                label Тип Объявления
                .selectbox: select
                  option
                  option(selected) Частное
                  option Коммерческое
              .col.lg-12.md-3.sm-6: .input__group
                label Категория
                .selectbox: select
                  option
                  option(selected) Авто
                  option Одежда
                  option Товары для дома
                  option Недвижимость
                  option Знакомства
              .col.lg-12.md-3.sm-6: .input__group
                label ПодКатегория
                .selectbox: select
                  option
                  option(selected) Суперкары
                  option Внедорожники
                  option Легковые
                  option Грузовики
      .create__media
        h3 Фотографии и видео
        .create__media--photos
          - for(i=1;i<=3;i++)
            .photo--thumb
              img(src="img/thumbnail.png", alt="")
              a.delete
                svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x")
                  line(x1="18" y1="6" x2="6" y2="18")
                  line(x1="6" y1="6" x2="18" y2="18")
          .photo--thumb
            input#upload_photo(type="file")
            label(for="upload_photo"): img(src="img/no-avatar.png", alt="")
        .create__media--videos
          .video--upload
            input#video-upload(type="file")
            label(for="video-upload")
              svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M19 11h-6V5c0-.6-.4-1-1-1s-1 .4-1 1v6H5c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1v-6h6c.6 0 1-.4 1-1s-.4-1-1-1z")
              span Добавить Видео
          .video--item 
            svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M19.8 1H4.2A3.2 3.2 0 0 0 1 4.2v15.6C1 21.6 2.4 23 4.2 23h15.6c1.8 0 3.2-1.4 3.2-3.2V4.2C23 2.4 21.6 1 19.8 1zM18 8h3v3h-3V8zm-2 3H8V3h8v8zM6 11H3V8h3v3zm-3 2h3v3H3v-3zm5 0h8v8H8v-8zm10 0h3v3h-3v-3zm3-8.8V6h-3V3h1.8c.7 0 1.2.5 1.2 1.2zM4.2 3H6v3H3V4.2C3 3.5 3.5 3 4.2 3zM3 19.8V18h3v3H4.2c-.7 0-1.2-.5-1.2-1.2zM19.8 21H18v-3h3v1.8c0 .7-.5 1.2-1.2 1.2z")
            span example_file.mp4
            a(href="")
              svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x")
                line(x1="18" y1="6" x2="6" y2="18")
                line(x1="6" y1="6" x2="18" y2="18")
          .video--item 
            svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M19.8 1H4.2A3.2 3.2 0 0 0 1 4.2v15.6C1 21.6 2.4 23 4.2 23h15.6c1.8 0 3.2-1.4 3.2-3.2V4.2C23 2.4 21.6 1 19.8 1zM18 8h3v3h-3V8zm-2 3H8V3h8v8zM6 11H3V8h3v3zm-3 2h3v3H3v-3zm5 0h8v8H8v-8zm10 0h3v3h-3v-3zm3-8.8V6h-3V3h1.8c.7 0 1.2.5 1.2 1.2zM4.2 3H6v3H3V4.2C3 3.5 3.5 3 4.2 3zM3 19.8V18h3v3H4.2c-.7 0-1.2-.5-1.2-1.2zM19.8 21H18v-3h3v1.8c0 .7-.5 1.2-1.2 1.2z")
            span example_file.mp4
            a(href="")
              svg(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x")
                line(x1="18" y1="6" x2="6" y2="18")
                line(x1="6" y1="6" x2="18" y2="18")
      .create__user
        h3 Контактная информация
        .row
          .col.lg-6.md-8
            .row
              .col.sm-6: .input__group
                label Телефон
                input(type="tel")
                .checkbox
                  input#show_phone(type="checkbox" checked="")
                  label(for="show_phone") 
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): polyline(points="20 6 9 17 4 12")
                    span Показывать телефон
              .col.sm-6: .input__group
                label Дополнительный Телефон
                input(type="tel")
              .col.sm-6: .input__group
                label Регион
                .selectbox: select
                  option
                  option(selected) Berlin and Brandenburg
                  option Saxony
                  option ТThuringia
                  option Franconia
                .checkbox
                  input#show_region(type="checkbox")
                  label(for="show_region") 
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): polyline(points="20 6 9 17 4 12")
                    span Показывать Регион
              .col.sm-6: .input__group
                label Адрес
                input(type="text")
                .checkbox
                  input#show_adress(type="checkbox")
                  label(for="show_adress") 
                    svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): polyline(points="20 6 9 17 4 12")
                    span Показывать Адрес
          .col.lg-6.md-4: .create__user--map: #new_map
      .create__controls
        .btn.blue
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M20.7 5.3a1 1 0 0 0-1.4 0L9 15.6l-4.3-4.3c-.4-.4-1-.4-1.4 0s-.4 1 0 1.4l5 5c.2.2.4.3.7.3s.5-.1.7-.3l11-11c.4-.4.4-1 0-1.4z")
          span Опубликовать
        .btn.blue
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M21.7 7.3l-5-5a1 1 0 0 0-1.4 0l-13 13a1 1 0 0 0-.3.7v5c0 .6.4 1 1 1h5c.3 0 .5-.1.7-.3l13-13c.4-.4.4-1 0-1.4zM7.6 20H4v-3.6l12-12L19.6 8l-12 12z")
          span Сохранить в черновик
        .btn.blue
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24")
            path(d="M23.9 11.6C23.7 11.2 19.5 3 12 3S.3 11.2.1 11.6v.9C.3 12.8 4.5 21 12 21s11.7-8.2 11.9-8.6c.1-.2.1-.6 0-.8zM12 19c-5.4 0-8.9-5.4-9.9-7C3 10.4 6.6 5 12 5s8.9 5.4 9.9 7c-1 1.6-4.5 7-9.9 7z")
            path(d="M12 8a4 4 0 0 0-4 4 4 4 0 0 0 4 4 4 4 0 0 0 4-4 4 4 0 0 0-4-4zm0 6a2 2 0 0 1-2-2c0-1.1.9-2 2-2a2 2 0 0 1 2 2 2 2 0 0 1-2 2z")
          span Предпросмотр
        .btn.link
          svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M19 11H7.4l5.3-5.3c.4-.4.4-1 0-1.4s-1-.4-1.4 0l-7 7-.2.3c-.1.2-.1.5 0 .8l.2.3 7 7c.2.2.5.3.7.3s.5-.1.7-.3c.4-.4.4-1 0-1.4L7.4 13H19c.6 0 1-.4 1-1s-.4-1-1-1z")
          span Выйти









