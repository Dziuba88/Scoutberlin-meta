extends models/layout
block content
  section.cabinet
    .container
      .cabinet__header Личный кабинет
      .row
        .col.lg-9.md-8
          .cabinet__indexes
            .row
              .col.sm-6.md-4
                .cabinet__nav
                  .cabinet__nav--header Профиль
                  ul
                    li: a(href=""): span Редактировать
                    li: a(href=""): span Сменить пароль
                    li: a(href=""): span Настройки
              .col.sm-6.md-4
                .cabinet__nav
                  .cabinet__nav--header Счет
                  ul
                    li: a(href=""): span Купить поднятие объявлений
                    li: a(href=""): span Купить продвижение объявлений
                    li: a(href=""): span Купить публикацию в справочнике
              .col.sm-6.md-4
                .cabinet__nav
                  .cabinet__nav--header Сообщения
                  ul
                    li: a(href="")
                      span Входящие
                      span.counter 2
                    li: a(href="")
                      span Исходящие
                      span.counter 23
              .col.sm-6.md-4
                .cabinet__nav
                  .cabinet__nav--header Объявления
                  ul
                    li: a(href=""): span Создать новое
                    li: a(href="")
                      span Активные
                      span.counter 3
                    li: a(href="")
                      span Неактивные
                      span.counter 14
              .col.sm-6.md-4
                .cabinet__nav
                  .cabinet__nav--header Компании
                  ul
                    li: a(href=""): span Создать компанию
                    li: a(href="")
                      span Активные
                      span.counter 1
                    li: a(href=""): span Неактивные
              .col.sm-6.md-4
                .cabinet__nav
                  .cabinet__nav--header Избранное
                  ul
                    li: a(href="")
                      span Объявления
                      span.counter 22
                    li: a(href="")
                      span Компании
                      span.counter 3
        .col.lg-3.md-4
          .cabinet__plan
            .cabinet__plan--body
              .cabinet__plan--title Пакет «Стандарт»
              .cabinet__plan--counter 25
              .cabinet__plan--info поднятий осталось
            .cabinet__plan--control
              a(href="").btn.block.white
                svg(xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"): path(d="M19 11h-6V5c0-.6-.4-1-1-1s-1 .4-1 1v6H5c-.6 0-1 .4-1 1s.4 1 1 1h6v6c0 .6.4 1 1 1s1-.4 1-1v-6h6c.6 0 1-.4 1-1s-.4-1-1-1z")
                span Купить поднятие объявлений
  include models/catalog__viewed
